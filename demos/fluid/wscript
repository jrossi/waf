#! /usr/bin/env python
# encoding: utf-8
# Grygoriy Fuchedzhy 2009

top = '.'
out = 'out'

def options(opt):
	opt.tool_options('compiler_cxx')

def configure(conf):
	#conf.recurse('gni')
	conf.check_tool('compiler_cxx')
	conf.check_tool('fluid')

def build(bld):
	bld.program(
		target   = 'sample',
		source   = 'main.cpp PopupDialog.fl UserInterface.fl',
		includes = '.',
		install_path = '${PREFIX}/bin/',
		use      = 'FLTK')

